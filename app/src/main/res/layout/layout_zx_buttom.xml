<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:layout_width="26dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="26dp"
                android:background="@drawable/tab_home_normal"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="首页"
                android:textSize="11sp"
                android:layout_gravity="center_horizontal"
                android:textColor="#949494"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="3dp"
            android:layout_marginBottom="2dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:layout_width="26dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="26dp"
                android:background="@drawable/res_market_name_normal"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="行情"
                android:textSize="11sp"
                android:layout_gravity="center_horizontal"
                android:textColor="#949494"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="3dp"
            android:layout_marginBottom="2dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:layout_width="26dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="26dp"
                android:background="@drawable/ic_yueya"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="现货"
                android:textSize="11sp"
                android:layout_gravity="center_horizontal"
                android:textColor="#949494"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="3dp"
            android:layout_marginBottom="2dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:layout_width="26dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="26dp"
                android:background="@drawable/res_icon_guide_mining"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="合约"
                android:textSize="11sp"
                android:layout_gravity="center_horizontal"
                android:textColor="#3E7AFC"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="3dp"
            android:layout_marginBottom="2dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:layout_width="26dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="26dp"
                android:background="@drawable/ic_svg_zc"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="现货"
                android:textSize="11sp"
                android:layout_gravity="center_horizontal"
                android:textColor="#949494"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
